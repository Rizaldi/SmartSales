<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".dashboard.MenuSales"
    tools:showIn="@layout/activity_menu_sales">
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:id="@+id/timeplace"
        android:background="#212121"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:textSize="15dp"
            android:textColor="#fff"
            android:id="@+id/gettime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/timeplace"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/so"
                android:background="@drawable/radius"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="130dp">
                <ImageView
                    android:src="@drawable/badge"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
                <TextView
                    android:text="Sales Order"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="15dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/pso"
                android:background="@drawable/radiust"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="130dp">
                <ImageView
                    android:src="@drawable/propose_sales"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
                <TextView
                    android:gravity="center"
                    android:text="Propose Sales Order"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <!-- menu 2-->
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/payment"
                android:background="#ea6153"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="130dp">
                <ImageView
                    android:src="@drawable/menu_payment"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
                <TextView
                    android:gravity="center"
                    android:text="Invoice Payment"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="15dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/goods"
                android:background="#e67e22"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="130dp">
                <ImageView
                    android:src="@drawable/menu_goods"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
                <TextView
                    android:text="Goods Return"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <!-- menu 3-->
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/competitor"
                android:background="@drawable/blradius"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="130dp">
                <ImageView
                    android:src="@drawable/menu_competitor"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
                <TextView
                    android:gravity="center"
                    android:text="Competitor"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="15dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/target"
                android:background="@drawable/brradius"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="130dp">
                <ImageView
                    android:src="@drawable/menu_target"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
                <TextView
                    android:text="Sales Target"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
