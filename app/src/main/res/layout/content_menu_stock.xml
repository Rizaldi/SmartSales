<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="smartsales.rizaldi.com.smartsales.dashboard.MenuStock"
    tools:showIn="@layout/activity_menu_stock">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/timeplace"
        android:background="#212121"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:textSize="15dp"
            android:textColor="#fff"
            android:id="@+id/gettime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/timeplace"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/stockbalance"
            android:padding="20dp"
            android:gravity="center"
            android:background="@drawable/radius"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/stock_balance"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <TextView
                android:layout_marginTop="5dp"
                android:text="Stock Balance"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_below="@+id/stockbalance"
            android:id="@+id/refillvan"
            android:padding="20dp"
            android:gravity="center"
            android:background="#ea6153"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/menu_goods"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <TextView
                android:layout_marginTop="5dp"
                android:text="Refill Van"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_below="@+id/refillvan"
            android:id="@+id/customerstock"
            android:padding="20dp"
            android:gravity="center"
            android:background="@drawable/brradius"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/menu_stock"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <TextView
                android:layout_marginTop="5dp"
                android:text="Customer Stock"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
